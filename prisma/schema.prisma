generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workout {
  id               Int         @id @default(autoincrement())
  distance         Float
  time             Int
  averageHeartRate Int
  calories         Int
  date             DateTime
  workoutType      WorkoutType @relation(fields: [workoutTypeId], references: [id])
  workoutTypeId    Int
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  userId           String
}

model WorkoutType {
  id           Int       @id @default(autoincrement())
  name         String
  minHeartRate Int
  maxHeartRate Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  color        Color
  workouts     Workout[]
  userId       String
}

enum Color {
  BLUE
  RED
  GREEN
  YELLOW
  PURPLE
  GRAY
  PINK
  LIME
  ORANGE
  CYAN
  TEAL
  ROSE
}
